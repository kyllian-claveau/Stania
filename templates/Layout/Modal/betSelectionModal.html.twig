<div id="select-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                <button id="prev-modal-button" type="button" class="bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-full text-sm h-8 w-8 inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7H1M7 13l-6-6 6-6"/>
                    </svg>
                    <span class="sr-only">Revenir à la modal précédente</span>
                </button>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    Parier sur la sélection
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm h-8 w-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="select-modal">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Fermer la fenêtre</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class="p-4 md:p-5 modal-body"> <!-- Ajout de la classe modal-body pour identifier le corps du modal -->
                <!-- Première partie : Sélection des matchs -->
                <div id="step1">
                    <p class="text-gray-500 dark:text-gray-400 mb-4">Pariez sur les matchs suivants : </p>
                    <ul class="space-y-4 mb-4" id="selected-parties-list"> <!-- Ajout de l'id selected-parties-list pour cibler la liste des matchs sélectionnés -->
                        <!-- Les matchs sélectionnés seront ajoutés ici -->
                    </ul>
                    <button id="next-modal-button" class="text-white inline-flex w-full justify-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                        Suivant
                    </button>
                </div>
                <!-- Deuxième partie : Détails des matchs sélectionnés -->
                <div id="step2" class="hidden">
                    <p class="text-gray-500 dark:text-gray-400 mb-4">Détails des matchs sélectionnés : </p>
                    <ul class="space-y-4 mb-4" id="selected-parties-details"> <!-- Ajout de l'id selected-parties-details pour cibler la liste des détails des matchs sélectionnés -->
                        <!-- Les détails des matchs sélectionnés seront ajoutés ici -->
                    </ul>
                    <button class="text-white inline-flex w-full justify-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                        Ajouter à la liste de sélection
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
