{% set content_class = app.request.attributes.get('_route') == 'app_template_create' ? '' : 'px-4 sm:px-6 lg:px-8' %}
{% extends 'Layout/Default/base.html.twig' %}
{% set body_class = 'bg-white' %}

{% block body %}
    <div>
        <div class="hidden lg:fixed lg:inset-y-0 lg:z-50 lg:flex lg:w-72 lg:flex-col">
            {% include 'Widget/Navigation/Sidebar/base.html.twig' %}
        </div>
        <!-- FIN DU MENU FIXE POUR LA VERSION PC  -->

        <!-- MENU BURGER POUR LES VERSIONS RESPONSIVE -->
        <div class="relative z-40 sticky top-0 flex items-center gap-x-6 bg-white px-4 py-4 shadow-sm sm:px-6 lg:hidden">
            <button type="button" class="relative z-50 -m-2.5 p-2.5 text-primary lg:hidden" id="burger-button">
                <span class="sr-only">Open sidebar</span>
                <svg class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                     stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
                </svg>
            </button>
            <div id="sidebar-menu" class="hidden fixed top-0 left-0 w-full bg-secondary h-full z-40">
                {% include 'Widget/Navigation/Sidebar/base.html.twig' %}
            </div>
            <div class="flex-1 text-sm font-semibold leading-6 text-white">Dashboard</div>
        </div>
        <!-- FIN DU MENU BURGER POUR LES VERSIONS RESPONSIVE -->

        <main class="lg:pl-72">
            <div class="{{ content_class }}">
                {% block content %}{% endblock content %}
            </div>
        </main>
    </div>
{% endblock body %}

{% block javascripts_html %}
    {% block javascripts %}{% endblock javascripts %}
{% endblock javascripts_html %}